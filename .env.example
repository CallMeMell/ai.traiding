# Dry Run Mode (set to false for real trading with API keys)
DRY_RUN=true

# Binance API Credentials (Primary Trading Platform)
# NOTE: For live trading, use Windows Credential Manager via setup wizard
# Run: scripts/setup_live.ps1
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Binance Testnet (for Paper Trading)
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_SECRET_KEY=your_testnet_secret_key_here

# Broker Configuration (for DRY_RUN mode)
BROKER_NAME=binance
BINANCE_BASE_URL=https://testnet.binance.vision

# Live Trading Flags (DANGER ZONE - Only for production trading)
# Do NOT enable these unless you fully understand the risks
# DRY_RUN=false
# LIVE_TRADING=true
# LIVE_ACK=I_UNDERSTAND
# BINANCE_BASE_URL=https://api.binance.com

# Emergency Kill Switch (blocks live orders, cancels open orders)
# KILL_SWITCH=false

# OpenAI (Optional - für AI-basierte Features)
OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration
LOG_LEVEL=INFO

# Trading Parameters (Optional - überschreibt config.py defaults)
# INITIAL_CAPITAL=10000
# TRADE_SIZE=100
# UPDATE_INTERVAL=60

# Risk Management
# STOP_LOSS_PERCENT=10
# TAKE_PROFIT_PERCENT=20
# MAX_DAILY_LOSS=5

# Alert System (Telegram, Email)
# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient_email@example.com

# Database Configuration
USE_DATABASE=false
DATABASE_PATH=data/trading_bot.db

# Enable/Disable Alert Channels
ENABLE_TELEGRAM_ALERTS=false
ENABLE_EMAIL_ALERTS=false
