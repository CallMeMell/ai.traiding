{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dev Deps",
      "type": "shell",
      "command": "python3 -m venv venv && . venv/bin/activate && pip install --upgrade pip && pip install streamlit plotly pandas requests python-dotenv pydantic",
      "windows": {
        "command": "python -m venv venv && .\\venv\\Scripts\\activate && pip install --upgrade pip && pip install streamlit plotly pandas requests python-dotenv pydantic"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run: Automation Runner (Dry-Run)",
      "type": "shell",
      "command": ". venv/bin/activate && python scripts/run_automation.py",
      "windows": {
        "command": ".\\venv\\Scripts\\activate && python scripts/run_automation.py"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Run: View Session (Streamlit)",
      "type": "shell",
      "command": ". venv/bin/activate && python scripts/run_view_session.py",
      "windows": {
        "command": ".\\venv\\Scripts\\activate && python scripts/run_view_session.py"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Streamlit.*$",
          "endsPattern": "^.*You can now view your Streamlit app.*$"
        }
      }
    },
    {
      "label": "Dev: Start All",
      "dependsOn": [
        "Run: Automation Runner (Dry-Run)",
        "Run: View Session (Streamlit)"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
