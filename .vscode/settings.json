{
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.formatting.provider": "none",
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true
  },
  "files.watcherExclude": {
    "**/data/charts/**": true,
    "**/logs/**": true,
    "**/venv/**": true
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "githubIssues.queries": [
    {
      "label": "Open: View Session (#42)",
      "query": "repo:CallMeMell/ai.traiding is:issue is:open 42 in:number"
    },
    {
      "label": "Open: Echtgeld-Automatisierung (#44)",
      "query": "repo:CallMeMell/ai.traiding is:issue is:open 44 in:number"
    },
    {
      "label": "Open PRs (me)",
      "query": "is:pr is:open author:@me repo:CallMeMell/ai.traiding"
    }
  ],
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": true,
  "gitlens.modes.zenMode.hideStatusBar": true,
  "remote.autoForwardPorts": true,
  "remote.portsAttributes": {
    "8501": {
      "label": "View Session",
      "onAutoForward": "openPreview",
      "protocol": "http"
    }
  },
  "extensions.ignoreRecommendations": false
}
